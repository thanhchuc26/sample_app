<% provide :title, t("reset_password.title") %>
<h1><%= t("reset_password.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "layouts/error_messages" %>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, t("users.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("users.password_confirm")%>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("reset_password.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
