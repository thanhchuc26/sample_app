<!DOCTYPE html>
<html>
  <head>
    <title><%= t "static_pages.home.logo" %></title>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "custom", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "custom", "data-turbolinks-track": "reload" %>`
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <%= link_to t("static_pages.home.to_en"), locale: :en %>
      <%= link_to t("static_pages.home.to_vi"), locale: :vi %>
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
